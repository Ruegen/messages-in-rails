<div class="ui segment">
 <h3>Mailbox</h3>
 <div class="ui list">
  <div class="item">
   <% @conversations.each do |conversation| %>
     <% if conversation.recipient_id == current_user.id %>
       <% id = conversation.sender_id %>
     <% else  %>
       <% id = conversation.recipient_id %>
     <% end %>
       <% user = User.find(id) %>
       <%= link_to user.profile.first_name, conversation_messages_path(conversation) %>
  <% end %>
  </div>
 </div>
</div>
<div class="ui segment">
 <h3>All Users</h3>
  <div class="ui list">
   <% @users.each do |user| %>
    <% if user.id != current_user.id %>
     <div class="item">
   <%= user.email %>
   <%= link_to 'Message me!', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post', class: "btn btn-xs btn-primary"%>
 </div>
  <% end %>
 <% end %>
 </div>
</div>
